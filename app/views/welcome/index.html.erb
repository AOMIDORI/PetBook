<%-# This is the welcome page view -%>
<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>

    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>

    <%= render 'layouts/shim' %>
  </head>
  <body>
    <%= render 'layouts/header' %>

    <div class="center jumbotron">
<!--
      <h1>Welcome to PetBook</h1>
!-->

      <div>

       <div align="center" id="frontpic" class="category">
               <img src="http://www.bytaglasen.se/files/cache/c00daa365bb745d36f4435d95f7ef978_f56.jpg" />
      </div>

      <div id="frontlogo">
     <%= link_to image_tag("logo_white.png", size: "250x125", alt: "Petbook white logo"), :class => "center_img" %></div>
    </div>

      <h4>
        Connect yourself to worldwide pet planet -  <a href=/about>PetBook</a>
      </h4>

       <%= link_to "Log in", login_path, class: "btn btn-lg btn-primary" %>

       <%= link_to "Sign up now", signup_path, class: "btn btn-lg btn-primary" %>

       <%= link_to "Explore as a Guest", explore_url, class: "btn btn-lg btn-primary" %>

     </div>

     <div class="container">
      <%= yield %>
      <%= render 'layouts/footer' %>

    </div>



  </body>
</html>
