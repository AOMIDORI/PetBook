<%-# This is the welcome page view -%>
<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <%= render 'layouts/header' %>

    <div class="center jumbotron">

      <!--<h1>Welcome to PetBook</h1>!-->
      <h2>
        Connect yourself to a wonderful pet planet -
        <a href=/about>PetBook</a>.
      </h2>

      <div>
       <%= link_to image_tag("logo_white.png", size: "340x180", alt: "Petbook white logo"), :class => "center_img" %></div>

       <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
     </div>

     <div class="container">
      <%= yield %>
      <%= render 'layouts/footer' %>

    </div>

  </body>
</html>
