<% provide(:title, @user.name) %>
<%= render 'layouts/header' %>

<%= link_to 'Edit', edit_user_path(@user) %> 
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %> 
      <h1>
        <%= @user.name %>
      </h1>
        <%= @user.email %>
    </section>

    <section>
      <%= render 'shared/stats' %>
    </section>
    <section>
      <h4> Pet lists </h4>
      <ol class="pets">
        <%= render @pets %>
      </ol>
      <%= link_to 'Add new pet', addpet_path %>
    </section>

  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>