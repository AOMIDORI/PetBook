<% provide(:title, @pet.name) %>
<%= render 'layouts/header' %>

<p>
  <strong>Avatar:</strong>
  <% if @pet.avatar? %>
    <%= link_to image_tag(@pet.avatar.url, size: "100"), @pet %>
  <% end %>
</p>

<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @pet.user.name %>
</p>

<p>
  <strong>Birthday:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Type:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Breed:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @pet.name %>
</p>

<%= link_to 'Edit', edit_pet_path(@pet) %>

<%= render 'layouts/footer' %>
