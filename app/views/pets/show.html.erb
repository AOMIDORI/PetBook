
<% provide(:title, @pet.name) %>
<%= render 'layouts/header' %>

<div class="text-center" style="margin-bottom: 10px">
  <% if @pet.avatar? %>
    <%= link_to image_tag(@pet.avatar.url, size: "120", class: "img-circle"), @pet %>
    <h4><strong><%= @pet.name %></strong></h4>
  <% end %>
</div>

<div class="center profilecard">

  <strong>Name: </strong>
  <%= @pet.name %>
  <br>

  <strong>Owner: </strong>
  <%= @pet.user.name %>
  <br>

  <strong>Birthday: </strong>
  <%= @pet.birthday %>
  <br>

  <strong>Gender: </strong>
  <%= @pet.gender %>
  <br>

  <strong>Animal Type: </strong>
  <%= @pet.animal_type %>

  <strong>Breed: </strong>
  <%= @pet.breed %>
  <br>

  <strong>Bio: </strong>
  <%= @pet.bio %>

</div>

<%= link_to 'Edit', edit_pet_path(@pet) %>

<%= render 'layouts/footer' %>
