<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to image_tag("logo_dark_high.png", size: "100x60", alt: "Rails logo"),   home_url, id:"logo" %>

    <div class="col-sm-4 col-md-6 pull-left">
      <div class="input-group">
        <div class = "form-inline">
          <%= form_tag pets_path, method: 'get', class: 'navbar-form', role: 'search' do %>
            <%= text_field_tag :query, params[:query], size: 150, placeholder: "Search", class: "form-control"%>
            <span class="input-group-btn">
            <%= button_tag(type: "submit", class: "btn btn-default") do %>
              <i class="glyphicon glyphicon-search"></i>
            <% end %>
          </span>
          <% end %>
        </div>
      </div>
    </div>

    <nav>

      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", home_url %></li>
        <li><%= link_to "Explore", '#' %></li>
        <li><%= link_to "News", '#' %></li>

        <% if logged_in? %>
        	<li class = "dropdown">
        		<a href="#" class = "dropdown-toggle" data-toggle="dropdown">
        			Account <b class="caret"></b>
        		</a>
        		<ul class="dropdown-menu">
        			<li><%= link_to "Profile", current_user %></li>
        			<li><%= link_to "Settings", edit_user_path(current_user) %></li>
        			<li class="divider"></li>
        			<li>
        			    <%= link_to "Log out", logout_path, method:"delete"%>
        			</li>
        		</ul>
        	</li>

        <% else %>
        	<li><%= link_to "Log in", login_path %></li>
        <% end %>

      </ul>
    </nav>
  </div>
</header>
